<form>
  <label>Alert</label>
  <fieldset submitButton="true">
    <html>
        <img src="/opt/signatures/splunk/static/app/search/images/hacker.jpg" width="200" length="200"/>
      </html>
    <input type="dropdown" token="hash">
      <label>Hash</label>
      <fieldForLabel>hash</fieldForLabel>
      <fieldForValue>hash</fieldForValue>
      <search>
        <query>source="/opt/signatures/myhash.txt"
| eval hash = _raw
| stats count by hash</query>
        <earliest>-7d@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="time" token="time">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>All Infomation</title>
        <search>
          <query>source="/opt/signatures/yara-*"
| rex field=source ".opt.signatures.yara\-(?&lt;source&gt;\S+).yara*"
| stats count by ip,source
| fields ip,source
| stats list(source) by ip
| rename list(source) as hashes</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
    <panel>
      <input type="text" token="targetip" searchWhenChanged="false">
        <label>Target IP</label>
      </input>
      <table>
        <title>Related Hashes</title>
        <search>
          <query>source="/opt/signatures/yara-*" ip=$targetip$
| rex field=source ".opt.signatures.yara\-(?&lt;source&gt;\S+).yara*"
| stats count by ip,source
| fields ip,source
| stats list(source) by ip
| rename list(source) as hash</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Location</title>
        <search>
          <query>source="/opt/signatures/yara*"
| iplocation ip
| stats count by Country</query>
          <earliest>$time.earliest$</earliest>
          <latest>$time.latest$</latest>
        </search>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.chart">pie</option>
        <option name="charting.drilldown">none</option>
        <option name="charting.legend.placement">right</option>
        <option name="refresh.display">progressbar</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <event>
        <title>Yara-Ratelimit</title>
        <search>
          <query>source="/opt/signatures/yara-$hash$/yara_ratelimit"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="list.drilldown">full</option>
        <option name="raw.drilldown">none</option>
        <option name="table.drilldown">none</option>
        <option name="type">list</option>
      </event>
    </panel>
  </row>
  <row>
    <panel>
      <event>
        <title>Yara-Challenge</title>
        <search>
          <query>source="/opt/signatures/yara-$hash$/yara_challenge"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="list.drilldown">none</option>
      </event>
    </panel>
  </row>
  <row>
    <panel>
      <event>
        <title>Yara-Block</title>
        <search>
          <query>source="/opt/signatures/yara-$hash$/yara_block"</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="list.drilldown">none</option>
      </event>
    </panel>
  </row>
</form>
